<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/room_swiplayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/recycleview_relativeLayout"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/room_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:paddingBottom="5dp"
                android:scrollbars="vertical" />
            <Button
                android:text="添加新演出厅"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_below="@+id/room_recyclerView"
                android:id="@+id/plan_add"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/add_button"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
        </LinearLayout>
        <RelativeLayout
            android:visibility="invisible"
            android:id="@+id/loading_now"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ProgressBar
                android:id="@+id/loding"
                android:layout_centerInParent="true"
                android:layout_width="50dp"
                android:visibility="visible"
                android:layout_height="50dp">
            </ProgressBar>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/library_red"
                android:textSize="25sp"
                android:text="正在加载中~~"
                android:layout_above="@+id/loding"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="28dp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/loading_faild"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/library_red"
                android:textSize="25sp"
                android:visibility="invisible"
                android:text="加载失败，下拉刷新~~"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="28dp" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>
