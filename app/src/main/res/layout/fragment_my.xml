<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/m"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="@color/library_red"
            android:text="个人中心"/>
        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/Linear_login"
            android:visibility="visible"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:background="@drawable/my_login_fragment_style"
            android:orientation="vertical"
            android:layout_height="130dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="8">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="0.5"/>
                <com.example.katherine_qj.ttms.model.RoundImageView
                    android:id="@+id/my_icon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/radio_home_foces"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="0.5"/>
                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_width="0dp"
                    android:layout_weight="9"
                    android:layout_height="80dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/my_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:textColor="@color/library_norall"
                        android:text="感谢使用" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dedddd"/>
                    <TextView
                        android:id="@+id/my_user_id"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textSize="17sp"
                        android:textColor="@color/library_norall"
                        android:gravity="center_vertical"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/mylogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:visibility="visible"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/login_open_two"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="0.5"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/my_login_fragment_style"
            android:visibility="visible"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_kaoqin"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="考勤"
                android:textSize="17sp"
                android:textColor="@color/library_norall" />
            <TextView
                android:background="#e2e2e2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />
            <TextView
                android:id="@+id/text_yeji"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="业绩"
                android:textSize="17sp"
                android:textColor="@color/library_norall" />
            <TextView
                android:background="#e2e2e2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />
            <TextView
                android:id="@+id/text_money"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="工资"
                android:textSize="17sp"
                android:textColor="@color/library_norall" />
            <TextView
                android:background="#e2e2e2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />
            <TextView
                android:id="@+id/text_ziliao"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="我的资料"
                android:textSize="17sp"
                android:textColor="@color/library_norall"
                />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
